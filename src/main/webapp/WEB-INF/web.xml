<?xml version="1.0" encoding="ISO-8859-1" ?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
    metadata-complete="false"
    version="3.0">

    <display-name>FusepoolP3 Spatial Search Demo</display-name>
    <description>
        This is a demo web application for searching points of interest and events around a given position
        
    </description>

    <servlet>
        <servlet-name>SpatialSearch</servlet-name>
        <servlet-class>eu.fusepool.p3.spatial.demo.SpatialSearchServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SpatialSearch</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>    